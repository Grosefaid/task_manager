<tbody>
<tr>
  <td><%= link_to task_table.id, task_path(task_table) %></td>
  <td><%= task_table.name %></td>
  <td><%= task_table.description %></td>
  <td><%= task_table.state %></td>
  <td><%= link_to task_table.user.email, :controller => :users, :action => :dashboard, :id => task_table.user.id if task_table.user %></td>
  <td><%= task_table.created_at %></td>
  <td>
    <% if user_signed_in? %>
      <%= link_to t('.edit', :default => t('helpers.links.edit')),
                  edit_task_path(task_table), :class => 'btn btn-default btn-xs' %>
      <%= link_to t('.destroy', :default => t('helpers.links.destroy')),
                  task_path(task_table),
                  :method => :delete,
                  :data => {:confirm => t('.confirm', :default => t('helpers.links.confirm', :default => 'Are you sure?'))},
                  :class => 'btn btn-xs btn-danger' %>
    <% end %>
  </td>
</tr>
</tbody>