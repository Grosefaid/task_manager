<%- model_class = Task -%>
<div class="page-header">
  <h1>Все задания</h1>
</div>
<table class="table table-striped">
  <%= render :partial => 'tasks/table_header', :locals => {:model_class => model_class} %>
  <%= render :partial => 'tasks/task_table', :collection => @tasks %>
</table>

<%= link_to 'Новое задание', new_task_path, :class => 'btn btn-primary' if user_signed_in? %>

<div class="text-center">
  <%= will_paginate @tasks, renderer: BootstrapPagination::Rails %>
</div>
